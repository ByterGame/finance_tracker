<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeypadButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/key_pressed_effect</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="OutlinedTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/primary_color</item>
    </style>

    <style name="ThemedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>
</resources>